<addon id="skin.arctic.zephyr.2.stripped" name="Arctic Zephyr 2 Stripped" provider-name="jurialmunkey, trexx" version="0.0.22">
    <requires>
        <import addon="xbmc.gui" version="5.17.0" />
        <import addon="script.skinshortcuts" version="2.0.1" />
        <import addon="script.embuary.helper" version="2.0.8" />
        <import addon="plugin.video.themoviedb.helper" version="4.10.14" />
        <import addon="plugin.video.imdb.trailers" version="2.1.16" />
        <import addon="weather.gismeteo" version="0.6.3" />
    </requires>
